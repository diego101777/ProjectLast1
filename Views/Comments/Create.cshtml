@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Site.Models.Comment
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-3">
                <form asp-action="create" asp-controller="comments">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Author" placeholder="Enter your name" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="CommentText" placeholder="Your message" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                </div>
                </div>
                </div>